{
  "manifest_version": 3,
  "name": "CornBlocker",
  "version": "1.0.0",
  "description": "Block adult content with humor and encouragement, not shame.",
  "permissions": [
    "declarativeNetRequest",
    "webNavigation",
    "storage"
  ],
  "host_permissions": [
    "*://*.pornhub.com/*",
    "*://*.xvideos.com/*",
    "*://*.xnxx.com/*",
    "*://*.redtube.com/*",
    "*://*.xhamster.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "blocked_domains",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
